<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>

        <item name="android:editTextColor">@color/colorPlainText</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPlainText</item>

        <item name="android:textViewStyle">@style/TextView</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">roboto</item>
        <item name="android:minHeight">56dp</item> <!-- 48 + 4 + 4 -->
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorButtonAboveText</item>
    </style>

    <style name="AppTheme.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">roboto</item>
        <item name="android:textColor">@color/colorPlainText</item>
        <item name="android:minHeight">56dp</item> <!-- 48 + 4 + 4 -->
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="TextView">
        <item name="android:fontFamily">roboto</item>
    </style>

    <style name="TextView.SectionTitle">
        <item name="android:textColor">@color/colorTextSubtitle</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.43</item>
    </style>

    <style name="RadioButtonText" parent="TextView.SectionTitle">
        <item name="android:textColor">@color/selector_radio_button_text_color</item>
        <item name="android:textColorSecondary">#61ffffff</item>
        <item name="colorControlNormal">#61ffffff</item>
    </style>

    <style name="TextHint">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:capitalize">characters</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>


    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorButtonAboveText</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">@dimen/nine_grid_unit</item>
        <item name="android:elevation">@dimen/one_grid_unit</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorPlainText</item>
        <item name="title">@color/colorPlainText</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

</resources>
