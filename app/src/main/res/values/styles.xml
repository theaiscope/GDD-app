<resources>

    <style name="Widget.AiScope.CompoundButton.Switch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColor">@color/colorPlainText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="Widget.AiScope.ListPopupWindow" parent="@style/Widget.AppCompat.ListPopupWindow">
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.AiScope.Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">roboto</item>
        <item name="android:minHeight">56dp</item> <!-- 48 + 4 + 4 -->
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorButtonAboveText</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:drawableTint">@color/colorButtonAboveText</item>
    </style>

    <style name="Widget.AiScope.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">roboto</item>
        <item name="android:textColor">@color/colorPlainText</item>
        <item name="android:minHeight">56dp</item> <!-- 48 + 4 + 4 -->
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="Widget.AiScope.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@color/colorSpinnerPopupBackground</item>
        <item name="android:colorAccent">@color/colorPlainText</item>
        <item name="android:textColor">@color/colorPlainText</item>
        <item name="android:textColorPrimary">@color/colorPlainText</item>
        <item name="android:textAppearance">@style/TextAppearance.AiScope.TextView.SectionTitle</item>
    </style>

    <style name="Widget.AiScope.DropDownItem.Spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorPlainText</item>
    </style>

    <style name="Widget.AiScope.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">@dimen/nine_grid_unit</item>
        <item name="android:elevation">@dimen/one_grid_unit</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

</resources>
